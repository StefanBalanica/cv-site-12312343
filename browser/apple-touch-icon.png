<svg width="180" height="180" viewBox="0 0 180 180" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#8b5cf6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#06b6d4;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="0" dy="8" stdDeviation="8" flood-color="#8b5cf6" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Background rectangle with rounded corners -->
  <rect x="20" y="20" width="140" height="140" rx="35" ry="35" fill="url(#gradient)" filter="url(#shadow)"/>
  
  <!-- SB text -->
  <text x="90" y="110" font-family="Arial, sans-serif" font-size="78" font-weight="bold" text-anchor="middle" fill="white">SB</text>
</svg>

